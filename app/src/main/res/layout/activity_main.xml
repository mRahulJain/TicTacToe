<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/parentL"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:context=".MainActivity">

    <EditText
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:hint="  Search!"
            android:textSize="20sp"
            android:id="@+id/eTextS"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custome_edit_text"
            android:drawableLeft="@drawable/ic_search"/>



    <EditText
            android:hint="Write todo here!"
            android:textSize="20sp"
            android:id="@+id/eText"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/custome_edit_text_1"
            android:drawableLeft="@drawable/ic_write"/>
    <LinearLayout
            android:orientation="horizontal"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageButton
                android:layout_weight="1"
                android:background="@drawable/btn_round"
                android:src="@android:drawable/ic_input_add"
                android:id="@+id/btnAdd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        <ImageButton
                android:background="@color/colorPrimary"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_sort_by_size"
                android:id="@+id/btnSort"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        <ImageButton
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:src="@drawable/ic_add_alert"
                android:id="@+id/setAlarm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        <ImageButton
                android:background="@drawable/btn_round_1"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_delete"
                android:id="@+id/btnDelet"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
    </LinearLayout>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ListView
                android:id="@+id/todoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        </ListView>

        <Button
                android:textColor="@color/colorCyan"
                android:textSize="15sp"
                android:background="@drawable/btn_notes"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="40dp"
                android:layout_gravity="bottom|right"
                android:id="@+id/notes"
                android:text="NOTES"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
    </FrameLayout>
</LinearLayout>